# Database Configuration
MONGO_URI=mongodb://localhost:27017/delhiveryway

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Email Configuration
GMAIL_USER=your-email@gmail.com
GMAIL_PASS=your-app-password

# Server Configuration
PORT=5000
NODE_ENV=production

# Frontend URLs (Production)
FRONTEND_URL=https://delhiveryway-customer.vercel.app
ADMIN_FRONTEND_URL=https://delhiveryway-admin.vercel.app
SHOPPER_FRONTEND_URL=https://delhiveryway-shopper.vercel.app

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
